<!-- popup_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色 -->
    <solid android:color="#FFFFFF" />
    <!-- 边框 -->
    <stroke android:width="1dp" android:color="#CCCCCC" />
    <!-- 圆角半径 -->
    <corners android:radius="50dp" />
    <!-- 内边距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
